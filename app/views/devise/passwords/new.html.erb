<div class="page-header header-filter" style="background-image: url(/assets/background/back_log.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <form class="form" action="show">  
          <div class="card card-signup card-hidden">
            <div class="card-header card-header-primary text-center">
              <h4 class="card-title text-center">Mot de passe oubliÃ©?</h4>
            </div>
            <span class="bmd-form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="material-icons">mail</i>
                  </span>
                </div>
                  <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: "Votre email" %>
              </div>
            </span>            
            <div class="card-footer justify-content-center">
              <%= f.submit "Envoyer message d'instruction", class: 'btn btn-rose btn-link btn-lg' %>
            </div>
          </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</div>