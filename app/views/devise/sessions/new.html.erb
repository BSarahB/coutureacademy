<div class="page-header header-filter" style="background-image: url(/assets/background/back_log.jpg);">
  <div class="container">
    <%= link_to "Log in with Google",user_google_oauth2_omniauth_authorize_path, class: "btn red darken-1" %>
    <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
          
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <form class="form" action="show">
          <div class="card card-login card-hidden">
            <div class="card-header card-header-primary text-center">
              <h4 class="card-title">Se connecter</h4>
              <div class="card-body">
                <div class="row">
                </div>
              </div>
            </div>
            <div class="card-body ">
              <span class="bmd-form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">email</i>
                    </span>
                  </div>
                  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: " Email" %>
                </div>
              </span>
              <span class="bmd-form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">lock_outline</i>
                    </span>
                  </div>
                  <%= f.password_field :password, class: 'form-control', placeholder: "Mot de passe" %>
                </div>
              </span>
            </div>
            <div class="card-footer justify-content-center">
              <%= f.submit "Se connecter", class: 'btn btn-rose btn-link btn-lg' %>
              
            </div>
            <p class="text-center">Nouveau sur le site ? <%= link_to "Inscrivez-vous", new_user_registration_path %> </p>
            <p class="text-center"><%= link_to "Mot de passe oubliÃ© ?", new_user_password_path %> </p>
          </div>
          
        </form>
        <% end %>
      </div>
    </div>
  </div>
</div>
