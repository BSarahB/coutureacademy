              </div>
              </div>
              
              <br><br>
    
      <div class="table-responsive">
    
                  <table class="table">
                    <thead>
                      <tr>
                        <th class="text-center">#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Cours fournis</th>
                        <th class="text-right">Cours suivis</th>
                        <th class="text-right">Actions</th>
                      </tr>
                    </thead>
                    <% @users.each do |user|%>
                    <tbody>
                      
                        <td class="text-center"><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.taught_lessons.count %> </td>
                        <td class="text-right"><%= Classroom.where(student_id: user.id).count %>   </td>
                        <td class="td-actions text-right">
                          <a  href="<%= user_path(user.id)%>" rel="tooltip" class="btn btn-success btn-just-icon btn-sm" data-original-title="" title="">
                            <i class="material-icons">account_box</i>
                          </a>
                        
                        </td>
                    
                    </tbody>
                    <% end %>
                  </table>
                  
      </div>
                
